<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NasaHomeAppPre" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.NasaHomeAppPre.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NasaHomeAppPre.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NasaHomeAppPre.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextViewTitle">
        <item name="android:textSize">@dimen/dimen_font_large</item>
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textColor">?android:colorPrimary</item>
        <item name="android:padding">@dimen/dimen_padding_medium</item>
    </style>

    <style name="TextViewTitleDetails" parent="TextViewTitle">
        <item name="android:textSize">@dimen/dimen_font_x_large</item>
    </style>

    <style name="TextViewSubTitle">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="fontFamily">@font/nunito_medium</item>
        <item name="android:textSize">@dimen/dimen_font_medium</item>
        <item name="android:paddingStart">@dimen/dimen_padding_medium</item>
        <item name="android:paddingLeft">@dimen/dimen_padding_medium</item>
    </style>

    <style name="TextViewSubTitleDetails" parent="TextViewSubTitle">
        <item name="android:textSize">@dimen/dimen_font_large</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Card.Media" parent="">
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopLeft">@dimen/card_image_corner</item>
        <item name="cornerSizeTopRight">@dimen/card_image_corner</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.ExtendedFloatingActionButton.Icon">
        <item name="android:layout_height">@dimen/dimen_button_size</item>
        <item name="android:layout_width">@dimen/dimen_button_size</item>
        <item name="backgroundTint">?android:colorPrimary</item>
        <item name="cornerRadius">@dimen/dimen_margin_medium</item>
        <item name="iconGravity">textEnd</item>
        <item name="iconTint">@color/white</item>
        <item name="android:padding">@dimen/dimen_padding_small</item>
    </style>
</resources>